model File {
  pk   Int    @id @default(autoincrement())
  id   String @unique
  name String
  size Int
  type String

  owner   User @relation(fields: [ownerId], references: [pk])
  ownerId Int

  folder   Folder @relation(fields: [folderId], references: [pk])
  folderId Int

  sharers FileSharers[]
  public  PublicFile?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
